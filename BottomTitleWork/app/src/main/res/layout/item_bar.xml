<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    style="@style/item_bar"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/index1"
        android:gravity="center"
        />

    <TextView
        style="@style/item_bar_txt"
        android:text="首页"
        />
</LinearLayout>
    <LinearLayout
        style="@style/item_bar">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/friends1"
            android:gravity="center"
            />

        <TextView
            style="@style/item_bar_txt"
            android:text="朋友"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/item_bar"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/info1"
            android:gravity="center"
            />

        <TextView
            style="@style/item_bar_txt"
            android:text="消息"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/item_bar">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/set1"
            android:gravity="center"
            />

        <TextView
            style="@style/item_bar_txt"
            android:text="设置"
            />
    </LinearLayout>
</LinearLayout>